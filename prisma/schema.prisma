generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id @default(autoincrement()) @map("user_Id")
  email    String @unique
  password String
  Car      Car?

  @@map("user")
}

model Car {
  carId     Int      @id @default(autoincrement()) @map("car_id")
  year      Int
  mileage   Int
  price     Int
  buyAt     DateTime @map("buy_at")
  user      User     @relation(fields: [userId], references: [userId])
  carType   CarType  @relation(fields: [carTypeId], references: [carTypeId])
  userId    Int      @unique @map("user_id")
  carTypeId Int      @unique @map("car_type_id")

  @@map("car")
}

model CarType {
  carTypeId    Int          @id @default(autoincrement()) @map("car_type_id")
  brand        String
  model        String
  beginYear    Int
  endYear      Int
  engine       Float
  transmission Transmission
  gasoline     Gasoline
  Car          Car?

  @@map("car_type")
}

enum Transmission {
  Mechanical
  Automatic
}

enum Gasoline {
  D
  A92
  A95
  A98
  A100
}
